= simple_form_for @article do |f|
  .panel.panel-default

    .panel-heading
      %h1 Create new Article

    .panel-body
      = f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category"}, class: 'form-control', label: "Categories"
      = f.input :title
      = f.input :content

    .panel-footer
      = f.submit "Save", class: 'btn btn-primary'